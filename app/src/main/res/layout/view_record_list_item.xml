<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="11dp"
    android:paddingEnd="11dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/white"
        app:cardElevation="1dp"
        app:cardCornerRadius="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingStart="11dp"
            android:paddingEnd="11dp"
            android:paddingTop="5.5dp"
            android:paddingBottom="5.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <org.apmem.tools.layouts.FlowLayout
                        android:id="@+id/tags_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/description"
                        android:textColor="@color/primaryText"
                        android:textSize="14sp"
                        android:text="Damajuana de 3L de Termidor en lo de Chechu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textColor="@color/secondaryText"
                        android:textSize="12sp"
                        android:id="@+id/account"
                        android:text="Cuenta de checkes Suiza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/secondaryText"
                            android:id="@+id/date"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:text="24/2 - 13:44"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:textColor="@color/primaryText"
                            android:layout_gravity="center_vertical|end"
                            android:id="@+id/amount"
                            android:text="$75854,42"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:id="@+id/type"
                            android:src="@drawable/ic_keyboard_arrow_down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                    android:id="@+id/not_synced"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_sync_disabled"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>